<% title "Vyčtená data ze zařízení #{@device}" %>

<% if @packets.any? %>
  <table class="list-table" cellspacing="0">
    <tr>
      <th>Zařízení</th>
      <th>Adresa</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    <% @packets.each do |packet| %>
      <tr>
        <td><%= packet.device %></td>
        <td><%= packet.address.to_address %></td>
        <td><%= packet.raw_data.unpack("H*").first %></td>
        <td class="action-links">
          <%= link_to "Zobrazit", [@device, packet], :class => 'icon-link show-link' %>
          <%= link_to "Odstranit", [@device, packet], :confirm => 'Jste si jist?', :method => :delete, :class => 'icon-link destroy-link' %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
<% else %>
  <p>Ze zařízení nebyla vyčtena žádná data.</p>
<% end %>


<p class="action-buttons right">
  <%= link_to "Zpět na zařízení", @device, :class => 'button-link' %>
</p>